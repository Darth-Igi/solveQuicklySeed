{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "es6": true,
    "node": false,
    "jquery": true,
    "browser": true
  },
  "extends": [
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": [
      1,
      200,
      2,
      {
        "ignoreComments": true
      }
    ],
    "linebreak-style": [
      0
    ],
    "@typescript-eslint/semi": [
      "error",
      "never"
    ],
    "no-trailing-spaces": 0,
    "arrow-body-style": 0,
    "no-plusplus": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "prefer-template": 0,
    "no-class-assign": 0,
    "radix": 0,
    "arrow-parens": 0,
    "image-has-alt": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "no-mixed-operators": 0,
    "no-await-in-loop": 0
  }
}
